{

    "manifest_version": 3,
    "name": "Select and Copy",
    "version": "3.0",
  
    "description": "Allowes you to easily copy, without using CTR + C or CMD + C.",
  
    "icons": {
      "48": "icons/icon.svg"
    },
   "permissions": [
    "activeTab", // Allows the extension to interact with the active tab
    "clipboardWrite", // Allows the extension to write to the clipboard
    "clipboardRead" // Allows the extension to read from the clipboard
  ],
    "content_scripts": [
      {
        "matches" : ["<all_urls>"],
        "js": ["/select-copy.js"]
      }
    ],
    "browser_action":{
      "browser_style" : true,
      "default_title" : "Select and Copy",
      "default_popup" : "/main.html"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "rayeole@gmail.com"
        }
      },
      "author": "Rohan Yeole, djangoproject.in"
  }
